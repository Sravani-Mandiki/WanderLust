<% layout('/layouts/boilerplate.ejs') -%>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3 mt-3">
        <form method="POST" action="/login" novalidate class="needs-validation">
            <div>
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good</div><br>
            </div>

            <div>
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required><br>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>